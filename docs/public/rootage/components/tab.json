{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "tab",
    "name": "Tab"
  },
  "data": {
    "base": {
      "enabled": {
        "label": {
          "color": "$color.fg.neutral-subtle"
        },
        "notification": {
          "size": "$dimension.s1",
          "cornerRadius": "$radius.full",
          "color": "$color.bg.brand-solid",
          "marginLeft": "$dimension.s0_5"
        }
      },
      "selected": {
        "label": {
          "color": "$color.fg.neutral"
        }
      },
      "disabled": {
        "label": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "minHeight": "44px",
          "paddingX": "$dimension.s2_5",
          "paddingY": "$dimension.s2_5"
        },
        "label": {
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5",
          "fontWeight": "$font-weight.bold"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "minHeight": "40px",
          "paddingX": "$dimension.s2_5",
          "paddingY": "$dimension.s2_5"
        },
        "label": {
          "fontSize": "$font-size.s4",
          "lineHeight": "$line-height.s4",
          "fontWeight": "$font-weight.bold"
        }
      }
    }
  }
}