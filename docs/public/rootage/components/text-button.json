{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "text-button",
    "name": "Text Button"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "paddingY": "$dimension.x0_5"
        },
        "label": {
          "fontWeight": "$font-weight.regular"
        },
        "prefixIcon": {
          "marginXEnd": "$dimension.x1"
        },
        "suffixIcon": {
          "marginXStart": "$dimension.x0_5"
        }
      },
      "pressed": {
        "root": {
          "color": "$color.palette.gray-200"
        }
      },
      "disabled": {
        "root": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "tone=brand": {
      "enabled": {
        "root": {
          "color": "$color.fg.brand"
        }
      }
    },
    "tone=neutral": {
      "enabled": {
        "root": {
          "color": "$color.fg.neutral"
        }
      }
    },
    "tone=neutralSubtle": {
      "enabled": {
        "root": {
          "color": "$color.fg.neutral-subtle"
        }
      }
    },
    "tone=critical": {
      "enabled": {
        "root": {
          "color": "$color.fg.critical"
        }
      }
    },
    "size=large": {
      "enabled": {
        "root": {
          "cornerRadius": "$radius.r1_5"
        },
        "prefixIcon": {
          "size": "$dimension.x4"
        },
        "suffixIcon": {
          "size": "$dimension.x4"
        },
        "label": {
          "fontSize": "$font-size.t6",
          "lineHeight": "$line-height.t6"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "cornerRadius": "$radius.r1_5"
        },
        "prefixIcon": {
          "size": "$dimension.x3_5"
        },
        "suffixIcon": {
          "size": "$dimension.x3_5"
        },
        "label": {
          "fontSize": "$font-size.t5",
          "lineHeight": "$line-height.t5"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "cornerRadius": "$radius.r1"
        },
        "prefixIcon": {
          "size": "$dimension.x3_5"
        },
        "suffixIcon": {
          "size": "$dimension.x3_5"
        },
        "label": {
          "fontSize": "$font-size.t4",
          "lineHeight": "$line-height.t4"
        }
      }
    }
  }
}