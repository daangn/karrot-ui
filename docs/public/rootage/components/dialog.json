{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "dialog",
    "name": "Dialog"
  },
  "data": {
    "base": {
      "enabled": {
        "backdrop": {
          "color": "$color.bg.overlay",
          "enterDuration": "$duration.s2",
          "enterTimingFunction": "$timing-function.enter",
          "enterOpacity": 0,
          "exitDuration": "$duration.s2",
          "exitTimingFunction": "$timing-function.exit",
          "exitOpacity": 0
        },
        "content": {
          "color": "$color.bg.layer-default",
          "cornerRadius": "$radius.s5",
          "marginX": "$dimension.s8",
          "paddingX": "$dimension.s5",
          "paddingY": "$dimension.s5",
          "maxWidth": "272px",
          "enterDuration": "$duration.s4",
          "enterTimingFunction": "$timing-function.enter-expressive",
          "enterOpacity": 0,
          "enterScale": 1.3,
          "exitDuration": "$duration.s2",
          "exitTimingFunction": "$timing-function.exit",
          "exitOpacity": 0
        },
        "header": {
          "gap": "$dimension.s1_5"
        },
        "footer": {
          "paddingTop": "$dimension.s4",
          "gap": "$dimension.s2"
        },
        "title": {
          "color": "$color.fg.neutral",
          "fontSize": "$font-size.s7",
          "lineHeight": "$line-height.s7",
          "fontWeight": "$font-weight.bold"
        },
        "description": {
          "color": "$color.fg.neutral",
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5",
          "fontWeight": "$font-weight.regular"
        }
      }
    }
  }
}