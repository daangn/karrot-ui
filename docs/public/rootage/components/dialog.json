{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "dialog",
    "name": "Dialog"
  },
  "data": {
    "base": {
      "enabled": {
        "backdrop": {
          "background": "$color.bg.overlay"
        },
        "content": {
          "background": "$color.bg.layer-default",
          "borderRadius": "$radius.s5",
          "marginX": "$unit.s8",
          "paddingX": "$unit.s5",
          "paddingY": "$unit.s5",
          "maxWidth": "272px"
        },
        "header": {
          "gap": "$unit.s1_5"
        },
        "footer": {
          "paddingTop": "$unit.s4",
          "gap": "$unit.s2"
        },
        "title": {
          "color": "$color.fg.neutral",
          "fontSize": "$font-size.s7",
          "lineHeight": "$line-height.s7",
          "fontWeight": "$font-weight.bold"
        },
        "description": {
          "color": "$color.fg.neutral",
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5",
          "fontWeight": "$font-weight.regular"
        }
      }
    }
  }
}