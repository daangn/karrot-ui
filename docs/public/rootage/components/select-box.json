{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "select-box",
    "name": "Select Box"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "gap": "$unit.x3"
        },
        "box": {
          "paddingX": "$unit.x4",
          "paddingY": "19px",
          "gap": "$unit.x2_5",
          "strokeWidth": "1px",
          "strokeColor": "$color.stroke.neutral",
          "cornerRadius": "$radius.x3"
        },
        "content": {
          "gap": "$unit.x0_5"
        },
        "label": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.bold",
          "fontSize": "$font-size.t5",
          "lineHeight": "$line-height.t5"
        },
        "description": {
          "color": "$color.fg.neutral-muted",
          "fontWeight": "$font-weight.regular",
          "fontSize": "$font-size.t4",
          "lineHeight": "$line-height.t4"
        },
        "control": {
          "marginY": 0
        }
      },
      "pressed": {
        "box": {
          "color": "$color.bg.layer-default-pressed"
        }
      },
      "selected": {
        "box": {
          "color": "$color.bg.neutral-weak",
          "strokeColor": "$color.stroke.control"
        }
      },
      "selected,pressed": {
        "box": {
          "color": "$color.bg.neutral-weak-pressed"
        }
      }
    }
  }
}