{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "text-field",
    "name": "Text Field"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "gap": "$unit.x3"
        },
        "label": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.bold"
        },
        "indicator": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.regular"
        },
        "content": {
          "gap": "$unit.x2"
        },
        "input": {
          "color": "$color.bg.layer-default",
          "strokeWidth": "1px",
          "strokeColor": "$color.stroke.field"
        },
        "inputText": {
          "color": "$color.fg.neutral"
        },
        "placeholder": {
          "color": "$color.fg.placeholder"
        },
        "description": {
          "gap": "$unit.x1",
          "color": "$color.fg.neutral-subtle",
          "fontWeight": "$font-weight.regular"
        }
      },
      "focused": {
        "input": {
          "strokeColor": "$color.stroke.field-focused"
        }
      },
      "disabled": {
        "input": {
          "color": "$color.bg.disabled"
        },
        "placeholder": {
          "color": "$color.fg.disabled"
        },
        "inputText": {
          "color": "$color.fg.disabled"
        }
      },
      "readOnly": {
        "input": {
          "color": "$color.bg.disabled"
        }
      },
      "invalid": {
        "input": {
          "color": "$color.bg.danger-weak",
          "strokeColor": "$color.stroke.danger"
        },
        "description": {
          "color": "$color.fg.danger"
        }
      }
    },
    "size=xlarge": {
      "enabled": {
        "header": {
          "lineHeight": "$line-height.t5"
        },
        "label": {
          "fontSize": "$font-size.t5"
        },
        "spacer": {
          "fontSize": "$font-size.t5",
          "size": "$unit.x1_5"
        },
        "indicator": {
          "fontSize": "$font-size.t5"
        },
        "input": {
          "size": "56px",
          "cornerRadius": "$radius.x2_5",
          "gap": "$unit.x2",
          "paddingX": "$unit.x4",
          "paddingY": "$unit.x3"
        },
        "inputText": {
          "fontSize": "$font-size.t6",
          "lineHeight": "$line-height.t6"
        },
        "description": {
          "fontSize": "$font-size.t4",
          "lineHeight": "$line-height.t4"
        },
        "errorIcon": {
          "size": "$unit.x4"
        }
      }
    },
    "size=large": {
      "enabled": {
        "header": {
          "lineHeight": "$line-height.t5"
        },
        "label": {
          "fontSize": "$font-size.t5"
        },
        "spacer": {
          "fontSize": "$font-size.t5",
          "size": "$unit.x1_5"
        },
        "indicator": {
          "fontSize": "$font-size.t5"
        },
        "input": {
          "size": "52px",
          "cornerRadius": "$radius.x2_5",
          "gap": "$unit.x2",
          "paddingX": "$unit.x4",
          "paddingY": "$unit.x3"
        },
        "inputText": {
          "fontSize": "$font-size.t5",
          "lineHeight": "$line-height.t5"
        },
        "description": {
          "fontSize": "$font-size.t4",
          "lineHeight": "$line-height.t4"
        },
        "errorIcon": {
          "size": "$unit.x4"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "header": {
          "lineHeight": "$line-height.t4"
        },
        "label": {
          "fontSize": "$font-size.t4"
        },
        "spacer": {
          "fontSize": "$font-size.t4",
          "size": "$unit.x1"
        },
        "indicator": {
          "fontSize": "$font-size.t4"
        },
        "input": {
          "size": "40px",
          "cornerRadius": "$radius.x2",
          "gap": "$unit.x1_5",
          "paddingX": "$unit.x3_5",
          "paddingY": "$unit.x2_5"
        },
        "inputText": {
          "fontSize": "$font-size.t4",
          "lineHeight": "$line-height.t4"
        },
        "description": {
          "fontSize": "$font-size.t2",
          "lineHeight": "$line-height.t2"
        },
        "errorIcon": {
          "size": "$unit.x3_5"
        }
      }
    }
  }
}