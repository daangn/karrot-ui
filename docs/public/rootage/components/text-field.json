{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "text-field",
    "name": "Text Field"
  },
  "data": {
    "base": {
      "enabled": {
        "label": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.bold"
        },
        "indicator": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.regular"
        },
        "field": {
          "color": "$color.bg.layer-default",
          "strokeWidth": "1px",
          "strokeColor": "$color.stroke.field"
        },
        "value": {
          "color": "$color.fg.neutral"
        },
        "placeholder": {
          "color": "$color.fg.placeholder"
        },
        "prefixText": {
          "color": "$color.fg.neutral"
        },
        "prefixIcon": {
          "color": "$color.fg.neutral"
        },
        "suffixText": {
          "color": "$color.fg.neutral"
        },
        "suffixIcon": {
          "color": "$color.fg.neutral"
        },
        "description": {
          "color": "$color.fg.neutral-subtle",
          "fontWeight": "$font-weight.regular"
        },
        "errorMessage": {
          "color": "$color.fg.critical",
          "fontWeight": "$font-weight.regular"
        },
        "characterCount": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.regular"
        },
        "maxCharacterCount": {
          "color": "$color.fg.neutral-subtle",
          "fontWeight": "$font-weight.regular"
        }
      },
      "focused": {
        "field": {
          "strokeColor": "$color.stroke.field-focused"
        }
      },
      "invalid": {
        "field": {
          "color": "$color.bg.critical-weak",
          "strokeColor": "$color.stroke.critical"
        }
      },
      "invalid,focused": {
        "field": {
          "color": "$color.bg.layer-default",
          "strokeColor": "$color.stroke.field"
        }
      },
      "readonly": {
        "field": {
          "color": "$color.bg.disabled"
        }
      },
      "disabled": {
        "field": {
          "color": "$color.bg.disabled"
        },
        "value": {
          "color": "$color.fg.disabled"
        },
        "placeholder": {
          "color": "$color.fg.disabled"
        },
        "prefixText": {
          "color": "$color.fg.disabled"
        },
        "prefixIcon": {
          "color": "$color.fg.disabled"
        },
        "suffixText": {
          "color": "$color.fg.disabled"
        },
        "suffixIcon": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "size=xlarge": {
      "enabled": {
        "header": {
          "paddingBottom": "$dimension.s3",
          "gap": "$dimension.s1_5"
        },
        "label": {
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5"
        },
        "indicator": {
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5"
        },
        "field": {
          "minHeight": "56px",
          "cornerRadius": "$radius.s2_5",
          "gap": "$dimension.s2",
          "paddingX": "$dimension.s4",
          "paddingY": "$dimension.s3"
        },
        "value": {
          "fontSize": "$font-size.s6",
          "lineHeight": "$line-height.s6"
        },
        "prefixText": {
          "fontSize": "$font-size.s6",
          "lineHeight": "$line-height.s6"
