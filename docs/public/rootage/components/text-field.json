        "prefixIcon": {
          "size": "$dimension.s5"
        },
        "suffixText": {
          "fontSize": "$font-size.s6",
          "lineHeight": "$line-height.s6"
        },
        "suffixIcon": {
          "size": "$dimension.s5"
        },
        "footer": {
          "gap": "$dimension.s3_5",
          "paddingTop": "$dimension.s2",
          "minHeight": "20px"
        },
        "description": {
          "fontSize": "$font-size.s4",
          "lineHeight": "$line-height.s4"
