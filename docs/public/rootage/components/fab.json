{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "fab",
    "name": "Fab"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "color": "$color.bg.layer-floating",
          "borderRadius": "$radius.full"
        },
        "icon": {
          "color": "$color.fg.neutral"
        }
      },
      "pressed": {
        "root": {
          "color": "$color.bg.layer-floating-pressed"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "size": "$unit.s10"
        },
        "icon": {
          "size": "$unit.s5"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "size": "$unit.s12"
        },
        "icon": {
          "size": "$unit.s6"
        }
      }
    }
  }
}