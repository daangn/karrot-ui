{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "action-sheet-item",
    "name": "Action Sheet Item"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "color": "$color.bg.layer-floating",
          "minHeight": "50px",
          "paddingX": "$dimension.spacing-x.global-gutter",
          "paddingY": "$dimension.s3_5",
          "strokeBottomWidth": "1px",
          "strokeColor": "$color.stroke.neutral"
        },
        "label": {
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5",
          "fontWeight": "$font-weight.regular"
        }
      },
      "pressed": {
        "root": {
          "color": "$color.bg.layer-floating-pressed"
        }
      }
    },
    "tone=neutral": {
      "enabled": {
        "label": {
          "color": "$color.fg.neutral"
        }
      }
    },
    "tone=danger": {
      "enabled": {
        "label": {
          "color": "$color.fg.danger"
        }
      }
    }
  }
}