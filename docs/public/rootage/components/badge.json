{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "badge",
    "name": "Badge"
  },
  "data": {
    "size=medium": {
      "enabled": {
        "root": {
          "minHeight": "$unit.x5",
          "paddingX": "$unit.x2",
          "paddingY": "$unit.x1",
          "fontSize": "$font-size.t2"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "minHeight": "$unit.x4",
          "paddingX": "$unit.x1_5",
          "paddingY": "$unit.x0_5",
          "fontSize": "$font-size.t1"
        }
      }
    },
    "shape=pill": {
      "enabled": {
        "root": {
          "borderRadius": "$radius.full"
        }
      }
    },
    "shape=rectangle, size=medium": {
      "enabled": {
        "root": {
          "borderRadius": "$radius.x1"
        }
      }
    },
    "shape=rectangle, size=small": {
      "enabled": {
        "root": {
          "borderRadius": "$radius.x0_5"
        }
      }
    },
    "variant=soft": {
      "enabled": {
        "label": {
          "fontWeight": "$font-weight.medium"
        }
      }
    },
    "variant=solid": {
      "enabled": {
        "label": {
          "fontWeight": "$font-weight.bold"
        }
      }
    },
    "variant=outlined": {
      "enabled": {
        "root": {
          "borderWidth": "1px"
        },
        "label": {
          "fontWeight": "$font-weight.bold"
        }
      }
    },
    "tone=neutral, variant=soft": {
      "enabled": {
        "root": {
          "color": "$color.bg.neutral-weak"
        },
        "label": {
          "color": "$color.fg.neutral"
        }
      }
    },
    "tone=neutral, variant=solid": {
      "enabled": {
        "root": {
          "color": "$color.bg.neutral-solid"
        },
        "label": {
          "color": "$color.fg.static-white"
        }
      }
    },
    "tone=neutral, variant=outlined": {
