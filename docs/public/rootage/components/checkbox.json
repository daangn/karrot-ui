{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "checkbox",
    "name": "Checkbox"
  },
  "data": {
    "base": {
      "enabled": {
        "label": {
          "color": "$color.fg.neutral"
        },
        "root": {
          "gap": "$unit.s2"
        }
      }
    },
    "weight=default": {
      "enabled": {
        "label": {
          "fontWeight": "$font-weight.regular"
        }
      }
    },
    "weight=stronger": {
      "enabled": {
        "label": {
          "fontWeight": "$font-weight.bold"
        }
      }
    },
    "variant=square": {
      "enabled": {
        "control": {
          "strokeColor": "$color.stroke.control",
          "strokeWidth": "1.25px"
        }
      },
      "enabled,selected": {
        "control": {
          "color": "$color.bg.brand-solid"
        },
        "icon": {
          "color": "$color.palette.static-white"
        }
      },
      "pressed": {
        "control": {
          "color": "$color.bg.layer-default-pressed"
        }
      },
      "pressed,selected": {
        "control": {
          "color": "$color.bg.brand-solid-pressed"
        },
        "icon": {
          "color": "$color.palette.static-white"
        }
      },
      "disabled": {
        "control": {
          "color": "$color.bg.disabled",
          "strokeColor": "$color.stroke.neutral"
        },
        "label": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        }
      },
      "disabledSelected": {
        "label": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "variant=ghost": {
      "enabled": {
        "icon": {
          "color": "$color.fg.placeholder"
        }
      },
      "enabled,selected": {
        "icon": {
          "color": "$color.fg.brand"
        }
      },
      "pressed": {
        "control": {
          "color": "$color.bg.layer-default-pressed"
        }
      },
      "pressed,selected": {
        "control": {
          "color": "$color.bg.brand-weak-pressed"
        }
      },
      "disabled": {
        "label": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        }
      },
      "disabled,selected": {
        "label": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "minHeight": "$unit.s8"
        },
        "label": {
          "fontSize": "$font-size.s4",
          "lineHeight": "$line-height.s4"
        },
        "control": {
          "size": "$unit.s5",
          "cornerRadius": "$radius.s1"
        }
      }
    },
    "size=large": {
      "enabled": {
        "root": {
          "minHeight": "$unit.s9"
        },
        "label": {
          "fontSize": "$font-size.s5",
          "lineHeight": "$line-height.s5"
        },
        "control": {
          "size": "$unit.s6",
          "cornerRadius": "$radius.s1_5"
        }
      }
    },
    "variant=square,size=medium": {
      "enabled": {
        "icon": {
          "size": "12px"
        }
      }
    },
    "variant=square,size=large": {
      "enabled": {
        "icon": {
          "size": "14px"
        }
      }
    },
    "variant=ghost,size=medium": {
      "enabled": {
        "icon": {
          "size": "14px"
        }
      }
    },
    "variant=ghost,size=large": {
      "enabled": {
        "icon": {
          "size": "18px"
        }
      }
    }
  }
}