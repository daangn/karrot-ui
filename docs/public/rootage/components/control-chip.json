{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "control-chip",
    "name": "Control Chip"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "strokeColor": "$color.stroke.neutral",
          "strokeWidth": "1px",
          "cornerRadius": "$radius.full"
        },
        "label": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.medium"
        },
        "prefixIcon": {
          "color": "$color.fg.neutral"
        },
        "suffixIcon": {
          "color": "$color.fg.neutral-subtle"
        },
        "icon": {
          "color": "$color.fg.neutral"
        },
        "count": {
          "color": "$color.fg.neutral-muted",
          "fontWeight": "$font-weight.medium"
        }
      },
      "pressed": {
        "root": {
          "color": "$color.bg.layer-default-pressed"
        }
      },
      "selected": {
        "root": {
          "strokeWidth": 0,
          "color": "$color.bg.neutral-solid-muted"
        },
        "label": {
          "color": "$color.palette.static-white",
          "fontWeight": "$font-weight.bold"
        },
        "prefixIcon": {
          "color": "$color.palette.static-white"
        },
        "suffixIcon": {
          "color": "$color.palette.static-white"
        },
        "icon": {
          "color": "$color.palette.static-white"
        },
        "count": {
          "color": "$color.palette.static-white-alpha-800"
        }
      },
      "selected, pressed": {
        "root": {
          "color": "$color.bg.neutral-solid-muted-pressed"
        }
      },
      "disabled": {
        "root": {
          "color": "$color.bg.disabled"
        },
        "label": {
          "color": "$color.fg.disabled"
        },
        "prefixIcon": {
          "color": "$color.fg.disabled"
        },
        "suffixIcon": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        },
        "count": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "minHeight": "$dimension.x8",
          "paddingY": "$dimension.x1_5",
          "gap": "$dimension.x1"
        },
        "label": {
          "fontSize": "$font-size.t4"
        },
        "prefixIcon": {
          "size": "$dimension.x4"
        },
        "suffixIcon": {
          "size": "$dimension.x3_5"
        },
        "count": {
          "fontSize": "$font-size.t4"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "minHeight": "$dimension.x9",
          "paddingY": "$dimension.x2",
          "gap": "$dimension.x1"
        },
        "label": {
          "fontSize": "$font-size.t4"
        },
        "prefixIcon": {
          "size": "$dimension.x4"
        },
        "suffixIcon": {
          "size": "$dimension.x3_5"
        },
        "count": {
          "fontSize": "$font-size.t4"
        }
      }
    },
    "size=small,layout=withText": {
      "enabled": {
        "root": {
          "paddingX": "$dimension.x3"
        }
      }
    },
    "size=small,layout=iconOnly": {
      "enabled": {
        "root": {
          "minWidth": "$dimension.x8"
        },
        "icon": {
          "size": "$dimension.x4"
        }
      }
    },
    "size=medium,layout=withText": {
      "enabled": {
        "root": {
          "paddingX": "$dimension.x3_5"
        }
      }
    },
    "size=medium,layout=iconOnly": {
      "enabled": {
        "root": {
          "minWidth": "$dimension.x9"
        },
        "icon": {
          "size": "$dimension.x4"
        }
      }
    }
  }
}