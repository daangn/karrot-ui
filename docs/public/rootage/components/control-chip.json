{
  "kind": "ComponentSpec",
  "metadata": {
    "id": "control-chip",
    "name": "Control Chip"
  },
  "data": {
    "base": {
      "enabled": {
        "root": {
          "strokeColor": "$color.stroke.neutral",
          "strokeWidth": "1px",
          "cornerRadius": "$radius.full"
        },
        "label": {
          "color": "$color.fg.neutral",
          "fontWeight": "$font-weight.medium"
        },
        "prefixIcon": {
          "color": "$color.fg.neutral"
        },
        "suffixIcon": {
          "color": "$color.fg.neutral-subtle"
        },
        "icon": {
          "color": "$color.fg.neutral"
        },
        "count": {
          "color": "$color.fg.neutral-muted",
          "fontWeight": "$font-weight.medium"
        }
      },
      "pressed": {
        "root": {
          "color": "$color.bg.layer-default-pressed"
        }
      },
      "selected": {
        "root": {
          "strokeWidth": 0,
          "color": "$color.bg.neutral-solid-muted"
        },
        "label": {
          "color": "$color.fg.static-white",
          "fontWeight": "$font-weight.bold"
        },
        "prefixIcon": {
          "color": "$color.fg.static-white"
        },
        "suffixIcon": {
          "color": "$color.fg.static-white"
        },
        "icon": {
          "color": "$color.fg.static-white"
        },
        "count": {
          "color": "$color.palette.static-white-alpha-800"
        }
      },
      "selected, pressed": {
        "root": {
          "color": "$color.bg.neutral-solid-muted-pressed"
        }
      },
      "disabled": {
        "root": {
          "color": "$color.bg.disabled"
        },
        "label": {
          "color": "$color.fg.disabled"
        },
        "prefixIcon": {
          "color": "$color.fg.disabled"
        },
        "suffixIcon": {
          "color": "$color.fg.disabled"
        },
        "icon": {
          "color": "$color.fg.disabled"
        },
        "count": {
          "color": "$color.fg.disabled"
        }
      }
    },
    "size=small": {
      "enabled": {
        "root": {
          "minHeight": "$unit.s8",
          "paddingY": "$unit.s1_5",
          "gap": "$unit.s1"
        },
        "label": {
          "fontSize": "$font-size.s4"
        },
        "prefixIcon": {
          "size": "$unit.s4"
        },
        "suffixIcon": {
          "size": "$unit.s3_5"
        },
        "count": {
          "fontSize": "$font-size.s4"
        }
      }
    },
    "size=medium": {
      "enabled": {
        "root": {
          "minHeight": "$unit.s9",
          "paddingY": "$unit.s2",
          "gap": "$unit.s1"
        },
        "label": {
          "fontSize": "$font-size.s4"
        },
        "prefixIcon": {
          "size": "$unit.s4"
        },
        "suffixIcon": {
          "size": "$unit.s3_5"
        },
        "count": {
          "fontSize": "$font-size.s4"
        }
      }
    },
    "size=small,layout=with text": {
      "enabled": {
        "root": {
          "paddingX": "$unit.s3"
        }
      }
    },
    "size=small,layout=icon only": {
      "enabled": {
        "root": {
          "minWidth": "$unit.s8"
        },
        "icon": {
          "size": "$unit.s4"
        }
      }
    },
    "size=medium,layout=with text": {
      "enabled": {
        "root": {
          "paddingX": "$unit.s3_5"
        }
      }
    },
    "size=medium,layout=icon only": {
      "enabled": {
        "root": {
          "minWidth": "$unit.s9"
        },
        "icon": {
          "size": "$unit.s4"
        }
      }
    }
  }
}