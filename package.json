{
  "name": "@seed-design/project",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/react/*",
    "packages/recipe-generator/*",
    "packages/react-headless/*",
    "tools/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "ultra -r build",
    "build:dts": "ultra -r --build build:dts",
    "build-only-package": "ultra -r --build build:package",
    "build:style": "yarn workspaces foreach -pt run build:style",
    "clean": "ultra -r clean",
    "dev": "ultra -r dev",
    "release": "yarn changeset publish",
    "version": "changeset version && yarn build-only-package && yarn install --no-immutable"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "esbuild": "^0.15.13",
    "prettier": "^2.7.1",
    "typescript": "^5.4.5",
    "ultra-runner": "^3.10.5"
  },
  "packageManager": "yarn@3.2.2"
}
