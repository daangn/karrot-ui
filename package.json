{
  "name": "@seed-design/project",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/react-headless/*",
    "packages/utils/*",
    "tools/*",
    "tools/rootage/*",
    "tools/qvism/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "ultra -r build",
    "build-only-package": "ultra -r --filter 'packages/*' build",
    "release": "yarn changeset publish",
    "version": "changeset version && yarn build-only-package && yarn install --no-immutable",
    "format:all": "yarn biome format --fix",
    "test:all": "yarn vitest run",
    "generate:all": "yarn rootage:generate && yarn qvism:generate",
    "rootage:build": "ultra -r --build rootage:build",
    "rootage:generate": "yarn workspace @seed-design/vars rootage:generate && yarn workspace @seed-design/stylesheet rootage:generate && yarn workspace @seed-design/rootage-cli generate:schema && yarn workspace docs generate:rootage",
    "rootage:generate:watch": "watchlist packages/rootage/artifacts -- yarn rootage:generate",
    "rootage:test": "yarn vitest run --project rootage --reporter=verbose",
    "rootage:test:watch": "vitest dev --project rootage",
    "qvism:build": "ultra -r --build qvism:build",
    "qvism:generate": "yarn workspace @seed-design/qvism-preset build && yarn workspace @seed-design/recipe qvism:generate && yarn workspace @seed-design/stylesheet qvism:generate",
    "qvism:generate:watch": "watchlist packages/qvism-preset -- yarn qvism:generate",
    "cli:watch": "watchlist packages/cli -- yarn workspace @seed-design/cli dev",
    "headless:build": "ultra -r --filter 'packages/react-headless/*' build",
    "headless:test": "yarn vitest run --project react-headless --reporter=verbose",
    "headless:test:watch": "vitest dev --project react-headless",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@changesets/cli": "^2.27.9",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.1.0",
    "knip": "^5.41.1",
    "typescript": "^5.4.5",
    "ultra-runner": "^3.10.5",
    "vitest": "^1.6.0",
    "watchlist": "^0.3.1"
  },
  "packageManager": "yarn@4.5.3",
  "ultra": {
    "concurrent": [
      "rootage:generate"
    ]
  },
  "knip": {
    "workspaces": {
      ".": {
        "entry": [
          "index.{ts,tsx}",
          "src/index.{ts,tsx}"
        ],
        "project": [
          "**/*.{ts,tsx}",
          "!packages/archive/**/*.{js,ts,tsx}"
        ]
      },
      "docs": {
        "entry": [
          "next.config.{js,ts,cjs,mjs}",
          "source.config.{js,ts,cjs,mjs}",
          "{instrumentation,middleware}.{js,ts}",
          "app/global-error.{js,jsx,ts,tsx}",
          "app/**/{error,layout,loading,not-found,page,template,default}.{js,jsx,ts,tsx}",
          "app/**/route.{js,jsx,ts,tsx}",
          "app/{manifest,sitemap,robots}.{js,ts}",
          "app/**/{icon,apple-icon}.{js,jsx,ts,tsx}",
          "app/**/{opengraph,twitter}-image.{js,jsx,ts,tsx}",
          "components/example/*.{js,jsx,ts,tsx}",
          "registry/**/*.{js,jsx,ts,tsx}",
          ".storybook/{manager,preview}.{js,jsx,ts,tsx}",
          "**/*.@(mdx|stories.@(mdx|js|jsx|mjs|ts|tsx))"
        ],
        "project": [
          "**/*.{ts,tsx}",
          ".storybook/**/*.{js,jsx,ts,tsx}"
        ]
      }
    }
  }
}