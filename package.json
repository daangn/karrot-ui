{
  "name": "@seed-design/project",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/component-spec/*",
    "packages/recipe-generator/*",
    "packages/react-headless/*",
    "packages/utils/*",
    "tools/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "ultra -r build",
    "build:dts": "ultra -r --build build:dts",
    "build:style": "ultra -r --build build:style",
    "generate": "ultra -r generate",
    "clean": "ultra -r clean",
    "dev": "ultra -r dev",
    "release": "yarn changeset publish",
    "version": "changeset version && yarn build-only-package && yarn install --no-immutable",
    "lint:all": "yarn biome lint --fix",
    "format:all": "yarn biome format --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@changesets/cli": "^2.17.0",
    "typescript": "^5.4.5",
    "ultra-runner": "^3.10.5"
  },
  "packageManager": "yarn@3.2.2"
}
