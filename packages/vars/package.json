{
  "name": "@seed-design/vars",
  "version": "0.0.0",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daangn/seed-design.git",
    "directory": "packages/vars"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs"
    },
    "./component": {
      "types": "./lib/component/index.d.ts",
      "require": "./lib/component/index.cjs",
      "import": "./lib/component/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "prepack": "yarn rootage:generate",
    "build": "nanobundle build",
    "rootage:generate": "yarn rootage:generate:token && yarn rootage:generate:component && yarn build",
    "rootage:generate:token": "yarn rootage token-ts ./src",
    "rootage:generate:component": "yarn rootage component-spec ./src/component"
  },
  "devDependencies": {
    "@seed-design/rootage-cli": "0.0.0",
    "nanobundle": "^1.6.0"
  },
  "ultra": {
    "concurrent": [
      "build",
      "rootage:generate"
    ]
  }
}
