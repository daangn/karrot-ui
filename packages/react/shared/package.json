{
  "name": "@seed-design/react-shared",
  "version": "1.0.0-beta.0",
  "main": "lib/main.js",
  "module": "lib/module.js",
  "types": "lib/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "lib",
    "src"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "yarn build:js && yarn build:dts",
    "build:dts": "tsc --emitDeclarationOnly",
    "build:js": "node ./esbuild.config.js",
    "clean": "rimraf lib",
    "dev": "yarn build:js --watch && yarn build:dts --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daangn/seed-design.git",
    "directory": "packages/react/utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "esbuild": "^0.15.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "ultra-runner": "^3.10.5"
  },
  "ultra": {
    "concurrent": [
      "dev",
      "build"
    ]
  }
}
