{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "ignore": ["package.json", "**/archive/**/*", "**/.next/**/*"],
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "public",
      "node_modules",
      ".cache",
      "lib",
      "dist",
      "**/archive/**/*",
      "**/tools/**/build/**/*",
      ".next",
      ".source",
      ".vscode",
      "out",
      "bin"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "warn",
        "noUnusedTemplateLiteral": "warn",
        "useTemplate": "warn"
      },
      "complexity": {
        "useLiteralKeys": "warn",
        "noBannedTypes": "off",
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "suspicious": {
        "noExplicitAny": "info",
        "noArrayIndexKey": "info"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noLabelWithoutControl": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["tools/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "include": ["docs/**/*"],
      "ignore": ["public", "node_modules", ".cache", "lib", "dist"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "warn"
          },
          "a11y": {
            "noSvgWithoutTitle": "off"
          }
        }
      },
      "formatter": {
        "lineWidth": 80
      }
    },
    {
      "include": ["docs/**/*"],
      "ignore": [
        "**/*.css",
        "registry/**/*",
        "public/**/*",
        "node_modules",
        ".cache",
        "lib",
        "dist",
        ".eslintrc"
      ],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off",
            "useImportType": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "warn"
          },
          "a11y": {
            "useKeyWithClickEvents": "off"
          }
        }
      },
      "formatter": {
        "lineWidth": 100
      }
    }
  ]
}
